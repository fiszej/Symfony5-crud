{% extends "base.html.twig" %}

{% block title %}
	Book
{% endblock %}

{% block body %}
	<div class="card border-dark mb-3" style="max-width: 18rem;">
		<div class="card-header">Book: {{ book.id}}
        </div>
		<div class="card-body text-dark">
			<h3 class="card-title">{{ book.title }}</h3>
            <hr>
			<p class="card-text">{{ book.description }}</p>
            <small class="fw-light">{{ book.author }}</small>
            <br>
            <small class="fw-light">{{ book.publishingHouse }}</small>
		</div>
        <a href="/book/delete/{{ book.id}}" class="btn btn-danger">Delete</a>
        <a href="/book/update/{{ book.id}}" class="btn btn-success">Update</a>
	</div>
{% endblock %}
